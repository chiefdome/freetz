#!/bin/sh

# modified by cuma
# file: wan.sh
# created by ramik 11/02/2008
#
# This scripts calls the rrd data collection subscripts

MODPATH=/etc/default.rrdstats

if [ ! -r /mod/etc/conf/rrdstats.cfg ]; then
	exit 1
fi

while [ 1 ]
do
	$MODPATH/cpu.sh
	$MODPATH/memory.sh
	$MODPATH/wan.sh
	if [ $# -ge 1 ]; then
		sleep $1
	else
		exit 0
	fi
done
