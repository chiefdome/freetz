config FREETZ_BUSYBOX_VOLUMEID_LUKS
	bool "volumeid luks"
	depends on FREETZ_BUSYBOX_VOLUMEID && FREETZ_BUSYBOX_MOUNT_HELPERS
	default n
	help
		luks filesystem.

config FREETZ_BUSYBOX_VOLUMEID_LINUXRAID
	bool "volumeid linuxraid"
	depends on FREETZ_BUSYBOX_VOLUMEID && FREETZ_BUSYBOX_MOUNT_HELPERS
	default n
	help
		linuxraid filesystem.

