config FREETZ_BUSYBOX_VOLUMEID_FAT
	bool "volumeid fat"
	depends on FREETZ_BUSYBOX_VOLUMEID
	default n
	help
		fat filesystem.

config FREETZ_BUSYBOX_VOLUMEID_NTFS
	bool "volumeid ntfs"
	depends on FREETZ_BUSYBOX_VOLUMEID && FREETZ_BUSYBOX_MOUNT_HELPERS
	default n
	help
