#!/bin/sh
PATH=/bin:/usr/bin:/sbin:/usr/sbin

stop=0
args=$@

set -- $(getopt s $@ 2> /dev/null)
while [ $# -gt 0 ]; do
	[ "$1" == "-s" ] && mode=stop || mode=start
	shift
done

bind_status="$(/mod/etc/init.d/rc.bind status)"

if [ "$mode" != "stop" -a "$bind_status" == "stopped" ]; then
	/mod/etc/init.d/rc.bind >> /var/log/mod_net.log
fi

/etc/init.d/rc.multid $mode >/dev/null

if [ "$mode" == "stop" -a "$bind_status" != "stopped" ]; then
	/mod/etc/init.d/rc.bind stop >> /var/log/mod_net.log
fi
