#!/bin/sh

DAEMON=telnetd
DAEMON_LONG_NAME="AVM telnetd"
CONF_NAME=mod
CONF_ENABLED=MOD_TELNETD
. /etc/init.d/modlibrc

start() {
	modlib_startdaemon $DAEMON -l /sbin/ar7login
}

stop() {
	killall $DAEMON > /dev/null 2>&1
}

case $1 in
	""|load)
		modreg daemon -p avm telnetd
		modlib_start $MOD_TELNETD
		;;
	unload)
		modlib_stop
		modunreg daemon avm telnetd
		;;
	start)
		modlib_start
		;;
	stop)
		modlib_stop
		;;
	restart)
		modlib_restart
		;;
	status)
		modlib_status
		;;
	*)
		echo "Usage: $0 [load|unload|start|stop|restart|status]" 1>&2
		exit 1
		;;
esac

exit 0
