#!/bin/sh

DAEMON=crond
CONF_NAME=mod
CONF_ENABLED=MOD_CROND

. /etc/init.d/modlibrc

config() {
	cat /tmp/flash/mod/crontab /etc/cron.d/* 2> /dev/null |
	crontab -u root -
}

start() {
	modlib_startdaemon $DAEMON -b
}

case $1 in
	""|load)
		[ -r /tmp/flash/crontab.save ] && mv /tmp/flash/crontab.save /tmp/flash/mod/crontab
		modreg file mod crontab 'crontab' 0 "crontab"

		modlib_start $MOD_CROND
		;;
	unload)
		modunreg file mod crontab
		modlib_stop
		;;
	start)
		modlib_start
		;;
	stop)
		modlib_stop
		;;
	restart)
		modlib_restart
		;;
	reload)
		config
		;;
	status)
		modlib_status
		;;
	*)
		echo "Usage: $0 [load|unload|start|stop|restart|reload|status]" 1>&2
		exit 1
		;;
esac

exit 0
