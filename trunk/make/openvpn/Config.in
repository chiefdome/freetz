config FREETZ_PACKAGE_OPENVPN
	bool "OpenVPN"
	select FREETZ_BUSYBOX_BRCTL if ! FREETZ_PACKAGE_BRIDGE_UTILS
	select FREETZ_LIB_libcrypto if ! FREETZ_PACKAGE_OPENVPN_STATIC && ! FREETZ_PACKAGE_OPENVPN_POLARSSL
	select FREETZ_LIB_libssl if ! FREETZ_PACKAGE_OPENVPN_STATIC && ! FREETZ_PACKAGE_OPENVPN_POLARSSL
	select FREETZ_OPENSSL_VERSION_PROMPT if FREETZ_PACKAGE_OPENVPN_STATIC && ! FREETZ_PACKAGE_OPENVPN_POLARSSL
	default n
	help
		VPN Server

config FREETZ_PACKAGE_OPENVPN_23
	bool "Use beta version OpenVPN 2.3_RC1 - EXPERIMENTAL"
	depends on FREETZ_PACKAGE_OPENVPN
	default n
	help
		Use new aplpha version VPN Server with support for polarSSL

config FREETZ_PACKAGE_OPENVPN_POLARSSL
	bool "Use Polarssl - EXPERIMENTAL"
	depends on FREETZ_PACKAGE_OPENVPN && FREETZ_PACKAGE_OPENVPN_23
	default n
	select FREETZ_LIB_libpolarssl if ! FREETZ_PACKAGE_OPENVPN_STATIC
	help
		Enables usage of polarssl instead of openssl.
		Should lead to smaller binaries, but lacks support for some openssl features.

		IMPORTANT: 	PolarSSL does NOT support OpenVPN default cipher "blowfish" (BF-CBC)!
				Please use AES-128-CBC instead.

config FREETZ_PACKAGE_OPENVPN_STATIC
	bool "Statically link libraries"
	depends on FREETZ_PACKAGE_OPENVPN
	default n
	help
		OpenVPN needs the following shared libraries which can be linked in statically
		by activating this switch:
		- libcrypto.so
		- libssl.so
		- libc.so
		- libgcc_s.so
		- libdl.so
		- libz.so
		- ld-linux.so.2
		(- liblzo2.so)

config FREETZ_PACKAGE_OPENVPN_WITH_LZO
	bool "With lzo Compression"
	depends on FREETZ_PACKAGE_OPENVPN
	select FREETZ_LIB_liblzo2 if ! FREETZ_PACKAGE_OPENVPN_STATIC
	default y
	help
		LZO2 Compression for VPN Traffic

config FREETZ_PACKAGE_OPENVPN_WITH_MGMNT
	bool "Enable Management Console"
	depends on FREETZ_PACKAGE_OPENVPN
	default n
	help
		Enables OpenVPN's Management Console for administrative Tasks.
		This feature is not configurable via Web-UI.

config FREETZ_PACKAGE_OPENVPN_ENABLE_SMALL
	bool "Optimize for size"
	depends on FREETZ_PACKAGE_OPENVPN
	default y
	help
		Enables binary optimiziation for size.
		Must be disabled to use the config option "explicit-exit-notify".

config FREETZ_PACKAGE_OPENVPN_USE_IPROUTE
	bool "Use 'ip' instead of 'ifconfig' and 'route'"
	depends on FREETZ_PACKAGE_OPENVPN && FREETZ_BUSYBOX_IP
	select FREETZ_BUSYBOX_FEATURE_IP_ADDRESS
	select FREETZ_BUSYBOX_FEATURE_IP_LINK
	select FREETZ_BUSYBOX_FEATURE_IP_ROUTE
	default n
	help
		Enables openvpn to use ip when setting IPs, link parameters and routes.

comment "selects busybox's 'IP' options 'link', 'address' and 'route' (if not yet selected) ---"
	depends on FREETZ_PACKAGE_OPENVPN_USE_IPROUTE
