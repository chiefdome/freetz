#!/bin/sh

# Inside screen, use ASCII line drawing and assume xterm capabilities
[ -n "$STY" ] && ascii="-a" && export TERM=xterm
export TERMINFO=/mod/pkg/mc/usr/share/terminfo
# TERM=foobar yields $TERMINFO/f/foobar
[ -f "$TERMINFO/${TERM%${TERM#?}}/$TERM" ] || export TERM=xterm
[ -z "$HOME" ] && export HOME=/mod/root
mkdir -p $HOME/.mc
touch $HOME/.mc/hotlist
$0.bin -c $ascii $@
