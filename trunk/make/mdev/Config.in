config FREETZ_PACKAGE_MDEV
	bool "mdev 0.6.2 (unstable)"
	depends on \
		! FREETZ_HAS_AVM_UDEV && \
		( \
		  FREETZ_TYPE_7170 || \
		  FREETZ_TYPE_7240 || \
		  FREETZ_TYPE_7270 \
		)
	select FREETZ_PACKAGE_E2FSPROGS
	select FREETZ_PACKAGE_E2FSPROGS_E2FSCK
	select FREETZ_BUSYBOX_TAC
	select FREETZ_BUSYBOX_MDEV
	select FREETZ_BUSYBOX_FEATURE_MDEV_CONF
	select FREETZ_BUSYBOX_FEATURE_MDEV_RENAME
	select FREETZ_BUSYBOX_FEATURE_MDEV_RENAME_REGEXP
	select FREETZ_BUSYBOX_FEATURE_MDEV_EXEC
	select FREETZ_BUSYBOX_FEATURE_VOLUMEID
	select FREETZ_BUSYBOX_FEATURE_VOLUMEID_EXT
	select FREETZ_BUSYBOX_FEATURE_VOLUMEID_FAT
	select FREETZ_BUSYBOX_FEATURE_MOUNT_LABEL
	select FREETZ_BUSYBOX_REALPATH
	select FREETZ_BUSYBOX_USLEEP
	default n
	help
		Hotplug replacement using the busybox mdev utility. It contains a complete
		configuration and is easily extensible.
