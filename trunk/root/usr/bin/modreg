#!/bin/sh
#
# Usage: modreg cgi <pkg> <title>
#        modreg extra <pkg> <title> <sec-level> <cgi-name>
#        modreg file <id> <title> <sec-level> <desc-file>

case "$1" in
	cgi)
		[ -e /mod/etc/reg/cgi.reg ] || touch /mod/etc/reg/cgi.reg

		content=$(grep -v "^$2|" /mod/etc/reg/cgi.reg)
		( echo "$2|$3"; echo -n "$content" ) | sort > /mod/etc/reg/cgi.reg
		rm -f /mod/var/cache/menu_packages
		;;
	extra)
		[ -e /mod/etc/reg/extra.reg ] || touch /mod/etc/reg/extra.reg

		content=$(grep -v "^$2|.*|$5\$" /mod/etc/reg/extra.reg)
		( echo "$2|$3|$4|$5"; echo -n "$content" ) | sort > /mod/etc/reg/extra.reg
		rm -f /mod/var/cache/extras
		;;
	file)
		[ -e /mod/etc/reg/file.reg ] || touch /mod/etc/reg/file.reg

		content=$(grep -v "^$2|" /mod/etc/reg/file.reg)
		( echo "$2|$3|$4|$5"; echo -n "$content" ) | sort > /mod/etc/reg/file.reg
		rm -f /mod/var/cache/menu_settings
		;;
	status)
		[ -e /mod/etc/reg/status.reg ] || touch /mod/etc/reg/status.reg
		cgi=${4:-$2-status.cgi}

		content=$(grep -v "^$2|.*|$cgi\$" /mod/etc/reg/status.reg)
		( echo "$2|$3|$cgi"; echo -n "$content" ) | sort > /mod/etc/reg/status.reg
		rm -f /mod/var/cache/menu_status
		;;
		
	*)
		echo "Usage: $0 cgi <pkg> <title>" 1>&2
		echo "       $0 extra <pkg> <title> <sec-level> <cgi-name>" 1>&2
		echo "       $0 file <id> <title> <sec-level> <desc-file>" 1>&2
		echo "       $0 status <pkg> <title> [<cgi-name>]" 1>&2
		exit 1
		;;
esac

exit 0
