#!/bin/sh
#
# Usage: modunreg cgi <pkg>
#        modunreg extra <pkg> [<cgi-name>]
#        modunreg file <id>
#        modunreg status <pkg> [<cgi-name>]

case "$1" in
	cgi)
		[ -e /mod/etc/reg/cgi.reg ] || touch /mod/etc/reg/cgi.reg

		content=$(grep -v "^$2|" /mod/etc/reg/cgi.reg)
		echo "$content" > /mod/etc/reg/cgi.reg
		rm -f /mod/var/cache/menu_packages
		;;
	extra)
		[ -e /mod/etc/reg/extra.reg ] || touch /mod/etc/reg/extra.reg

		if [ -z "$3" ]; then
			content=$(grep -v "^$2" /mod/etc/reg/extra.reg)
		else
			content=$(grep -v "^$2|.*|$3\$" /mod/etc/reg/extra.reg)
		fi
		echo "$content" > /mod/etc/reg/extra.reg
		rm -f /mod/var/cache/extras
		;;
	file)
		[ -e /mod/etc/reg/file.reg ] || touch /mod/etc/reg/file.reg

		content=$(grep -v "^$2|" /mod/etc/reg/file.reg)
		echo "$content" > /mod/etc/reg/file.reg
		rm -f /mod/var/cache/menu_settings
		;;
	status)
		[ -e /mod/etc/reg/status.reg ] || touch /mod/etc/reg/status.reg

		if [ -z "$3" ]; then
			content=$(grep -v "^$2" /mod/etc/reg/status.reg)
		else
			content=$(grep -v "^$2|.*|$3\$" /mod/etc/reg/status.reg)
		fi
		echo "$content" > /mod/etc/reg/status.reg
		rm -f /mod/var/cache/menu_status
		;;
	*)
		echo "Usage: $0 cgi <pkg>" 1>&2
		echo "       $0 extra <pkg> [<cgi-name>]" 1>&2
		echo "       $0 file <id>" 1>&2
		echo "       $0 status <pkg> [<cgi-name>]" 1>&2
		exit 1
		;;
esac

exit 0
