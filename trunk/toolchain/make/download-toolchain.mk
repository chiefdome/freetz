KERNEL_TOOLCHAIN_SOURCE:=$(TARGET_ARCH)_gcc-$(KERNEL_TOOLCHAIN_GCC_VERSION)-freetz-$(KERNEL_TOOLCHAIN_VERSION)-shared-glibc.tar.lzma

TARGET_TOOLCHAIN_MD5_mips_4.4.6_0.9.29:=954944643b2403efe99ae68f631ffd83
TARGET_TOOLCHAIN_MD5_mips_4.4.6_0.9.30.3:=71e3ed6e114963f3dba3c37b08aee195
