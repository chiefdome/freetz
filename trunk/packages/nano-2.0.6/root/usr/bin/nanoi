if [ -z "$1" ]; then
	echo "Usage: $0 <config-filename>" 1>&2
	exit 1
fi

dir="$(dirname "$1")"

case "$(realpath "$dir")" in
	/var/flash)
		cat $1 > /var/nano.tmp
		nano /var/nano.tmp
		exitval=$?
		if [ $exitval -ne 0 ]; then
			rm -f /var/nano.tmp
			echo "aborted"
			exit $exitval
		fi

		echo -n "Are you sure you wan't to save the changes made? (y/n) "
		read -n 1 -s SAVE
		echo ""

		if [ "$SAVE" = "y" ]; then
			cat /var/nano.tmp > $1
			echo "done"
		else
			echo "aborted"
		fi

		rm -f /var/nano.tmp
		;;
	*)
		echo 'Use only with files in /var/flash/*' 1>&2
		exit 1
		;;
esac
