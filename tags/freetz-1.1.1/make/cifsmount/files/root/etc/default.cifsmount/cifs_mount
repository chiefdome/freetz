#!/bin/sh

export CIFSMNT_PATH=/usr/sbin

cat << EOF

cd /mod/etc
modprobe cifs

if [ "$CIFSMOUNT_MOUNTPOINT1" != "" ]; then
  echo "mount $CIFSMOUNT_SHARE1..."
  mkdir $CIFSMOUNT_MOUNTPOINT1
  $CIFSMNT_PATH/mount.cifs $CIFSMOUNT_SHARE1 $CIFSMOUNT_MOUNTPOINT1 -o user=$CIFSMOUNT_USER1,pass=$CIFSMOUNT_PASS1
fi

if [ "$CIFSMOUNT_MOUNTPOINT2" != "" ]; then
  echo "mount $CIFSMOUNT_SHARE2..."
  mkdir $CIFSMOUNT_MOUNTPOINT2
  $CIFSMNT_PATH/mount.cifs $CIFSMOUNT_SHARE2 $CIFSMOUNT_MOUNTPOINT2 -o user=$CIFSMOUNT_USER2,pass=$CIFSMOUNT_PASS2
fi

if [ "$CIFSMOUNT_MOUNTPOINT3" != "" ]; then
  echo "mount $CIFSMOUNT_SHARE3..."
  mkdir $CIFSMOUNT_MOUNTPOINT3
  $CIFSMNT_PATH/mount.cifs $CIFSMOUNT_SHARE3 $CIFSMOUNT_MOUNTPOINT3 -o user=$CIFSMOUNT_USER3,pass=$CIFSMOUNT_PASS3
fi

EOF
