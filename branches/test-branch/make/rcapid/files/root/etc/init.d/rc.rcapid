#!/bin/sh

DAEMON=rcapid

. /etc/init.d/modlibrc

case "$1" in
	""|load)
		modreg cgi 'rcapid' 'Rcapid'
		modreg daemon --disable rcapid

		modlib_start $RCAPID_ENABLED
		;;
	unload)
		modunreg cgi 'rcapid'
		modunreg daemon rcapid
		;;
	start)
		;;
	stop)
		;;
	restart)
		;;
	status)
		if [ "$RCAPID_ENABLED" == "inetd" ]; then
			echo 'inetd'
		else
			echo 'stopped'
		fi
		;;
	*)
		echo "Usage: $0 [load|unload|start|stop|restart|status]" 1>&2
		exit 1
		;;
esac

exit 0
